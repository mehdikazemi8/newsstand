<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/material_actionbar_size">

        <TextView
            android:id="@+id/template_header_back_button"
            style="@style/icon_style"
            android:text="@string/icon_arrow_right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/template_header_left_back_button"
            style="@style/template_header_icons"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/template_header_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:maxLength="30"
            android:textColor="@color/colorPrimary" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
